		ОбъектБазыДляЗаписи[стр_ВсеРеквизиты.Имя] = стр_ВсеРеквизиты.Значение;
	КонецЦикла;
	
	Если ОбменДаннымиЗагрузка Тогда
		ОбъектБазыДляЗаписи.ОбменДанными.Загрузка = Истина;
	КонецЕсли;
	
	//
	
